<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/animation_activity_common</item>
    </style>

    <style name="DayTheme" parent="AppTheme">
        <item name="title_back">@drawable/icon_nav_back</item>
        <item name="title_txt">@color/black</item>
        <item name="title_bg">@color/white</item>
    </style>

    <style name="NightTheme" parent="AppTheme">
        <item name="title_back">@drawable/icon_nav_back_night</item>
        <item name="title_txt">@color/white</item>
        <item name="title_bg">@color/title_bg_night</item>
    </style>

    <style name="animation_activity_common">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

</resources>
